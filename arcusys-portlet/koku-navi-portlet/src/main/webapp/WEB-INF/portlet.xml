<?xml version="1.0" encoding="UTF-8"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

	<portlet>
		<description>Portlet providing message navigation</description>
		<portlet-name>messageNavigation</portlet-name>
		<display-name>koku-navi-portlet</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>		
		</supports>
		<resource-bundle>messages</resource-bundle>
		<portlet-info>
			<title>Message Navigation Portlet</title>
		</portlet-info>
		<portlet-preferences>
				<preference>
				<name>naviRelativePath</name>
				<value>true</value>
			</preference>
				<preference>
					<name>kokuPortalMode</name>
					<value>KUNPO</value>
				</preference>
			  <preference>
					<name>navigationDefaultPath</name>
					<value>/portal/private/classic/Message</value>
				</preference>
	          <preference>
					<name>preferencesPathKks</name>
					<value>/portal/auth/portal/default/koku/KKS</value>
				</preference>
				<preference>
					<name>preferencesPathLok</name>
					<value>/portal/auth/portal/default/koku/LOK</value>
				</preference>	
				<preference>
					<name>preferencesPathPyh</name>
					<value>/portal/auth/portal/default/koku/PYH</value>
				</preference>
				<preference>
					<name>frontPagePath</name>
					<value>/portal/auth/portal/default/koku/</value>
				</preference>	
		</portlet-preferences>		
	</portlet>
</portlet-app>